<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="netsuite_generic_soap_api" name="Netsuite Generic Soap Api" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>A generic soap handler for interacting with NetSuite</description>
    <helpurl></helpurl>
    <visible>false</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="error_handling" label="Error Handling" required="true" tooltip="Determine what to return if an error is encountered." menu="Error Message,Raise Error">Error Message</parameter>
        <parameter id="output_type" label="Output Type" required="false" tooltip="The output type to return from a successful call." menu="JSON,XML">JSON</parameter>
        <parameter id="operation" label="Operation" required="true" tooltip="Must match the operation that the body is requesting">GET</parameter>
        <parameter id="body" label="Body" required="false" tooltip="JSON payload that is converted to xml and will the be body of the request"></parameter>
    </parameters>
    <handler name="netsuite_generic_soap_api" version="1">
        <infos>
            <info name="netsuite_environment">&lt;%= @info['netsuite_environment'] %&gt;</info>
            <info name="consumer_key">&lt;%= @info['consumer_key'] %&gt;</info>
            <info name="consumer_secret">&lt;%= @info['consumer_secret'] %&gt;</info>
            <info name="token_id">&lt;%= @info['token_id'] %&gt;</info>
            <info name="token_secret">&lt;%= @info['token_secret'] %&gt;</info>
            <info name="enable_debug_logging">&lt;%= @info['enable_debug_logging'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name="error_handling">&lt;%= @parameters.has_key?("error_handling") ?
                @parameters["error_handling"] : "Raise Error" %&gt;</parameter>
            <parameter name="output_type">&lt;%= @parameters.has_key?("output_type") ?
                @parameters['output_type'] : "JSON" %&gt;</parameter>
            <parameter name="operation">&lt;%= @parameters["operation"] %&gt;</parameter>
            <parameter name="body">&lt;%= @parameters["body"] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="Output" />
        <result name="Handler Error Message" />
    </results>
</taskDefinition>