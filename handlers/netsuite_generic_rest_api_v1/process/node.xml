<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="netsuite_generic_rest_api" name="Netsuite Generic Rest Api" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>A generic rest handler for interacting with NetSuite</description>
    <helpurl></helpurl>
    <visible>false</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="error_handling" label="Error Handling" required="true" tooltip="Determine what to return if an error is encountered." menu="Error Message,Raise Error">Error Message</parameter>
        <parameter id="method" label="Method" required="true" menu="GET,POST,PUT,PATCH,DELETE" tooltip="GET,POST,PUT,PATCH,DELETE (Defaults to GET)">GET</parameter>
        <parameter id="path" label="Path" required="true" tooltip="Example: /opportunities/12345"></parameter>
        <parameter id="body" label="Body" required="false" tooltip="JSON body if applicable (POST,PUT,PATCH)"></parameter>
    </parameters>
    <handler name="netsuite_generic_rest_api" version="1">
        <infos>
            <info name="netsuite_environment">&lt;%= @info['netsuite_environment'] %&gt;</info>
            <info name="consumer_key">&lt;%= @info['consumer_key'] %&gt;</info>
            <info name="consumer_secret">&lt;%= @info['consumer_secret'] %&gt;</info>
            <info name="token_id">&lt;%= @info['token_id'] %&gt;</info>
            <info name="token_secret">&lt;%= @info['token_secret'] %&gt;</info>
            <info name="enable_debug_logging">&lt;%= @info['enable_debug_logging'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name="error_handling">&lt;%= @parameters.has_key?("error_handling") ?
                @parameters["error_handling"] : "Raise Error" %&gt;</parameter>
            <parameter name="method">&lt;%= @parameters["method"] %&gt;</parameter>
            <parameter name="path">&lt;%= @parameters["path"] %&gt;</parameter>
            <parameter name="body">&lt;%= @parameters["body"] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="Response Body" />
        <result name="Response Code" />
        <result name="Handler Error Message" />
    </results>
</taskDefinition>